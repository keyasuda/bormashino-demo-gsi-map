<% if @loading%>
  loading...
<% else %>
  <ol>
    <% @pois.each.with_index do |poi, i| %>
      <li
        data-geometry='<%= poi['geometry'].to_json %>'
        <% if i == params['p'].to_i %>class="selected"<% end %>>
        <a href="/?q=<%= CGI.escape(params['q']) %>&p=<%= i %>">
          <%= poi['properties']['title'] %>
        </a>
      </li>
    <% end %>
  </ol>

  <form action='/' method='get'>
    <input type='text' name='q'>
    <input type='submit' value='検索'>
  </form>
<% end %>
